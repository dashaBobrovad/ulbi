{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        // позволяет использовать обычные импорты и экспорты в webpack.config.ts
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
